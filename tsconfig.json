{
  "compilerOptions": {
    "noEmit": false,
	  "allowJs": true,
	  "sourceMap": true,
	  "strict": true,
	  "strictNullChecks": true,
	  "skipLibCheck": true,
	  "module": "es6",
	  "target": "es6",
	  "moduleResolution": "node",
    "jsx": "react",
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,

    "baseUrl": "src",
    "paths": {
      "components": ["components/*"],
      "config": ["config/*"],
      "styles": ["styles/*"],
      "utils": ["utils/*"],
      "App": ["App/*"],
      "icons": ["icons/*"],
      "store": ["store/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
